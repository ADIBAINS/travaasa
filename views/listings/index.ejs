<% layout('/layouts/boilerplate') %>
    <style>
        .filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
        }

        .filter {
            display: flex;
            flex-direction: column;
            text-align: center;
            margin: 1rem;
            opacity: 0.8;
            font-size: 0.8rem;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .fuldis{display: inline;}
        .nodis{display: none;}
        .card-text{
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }
    
    </style>

    <body>
        <div class="filters">
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-fire"></i></span>
                <span class="text">Trending</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-sun"></i></span>
                <span class="text">Beach</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-mountain-sun"></i></span>
                <span class="text">Mountains</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-house"></i></span>
                <span class="text">Countryside</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-building-columns"></i></span>
                <span class="text">Metropoliten</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-gem"></i></span>
                <span class="text">Underrated Gems</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-fire"></i></span>
                <span class="text">Trending</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-sun"></i></span>
                <span class="text">Beach</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-mountain-sun"></i></span>
                <span class="text">Mountains</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-house"></i></span>
                <span class="text">Countryside</span>
            </div>
            <div class="filter">
                <span class="icon"><i class="fa-solid fa-building-columns"></i></span>
                <span class="text">Metropoliten</span>
            </div>
            <div class="tax-toggle ms-auto">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Total after Taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <%for(listing of allListings){%>
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <div class="card card-listing col">
                        <img src="<%= listing.image.url %>" class="card-img-top " style="height: 20rem;" alt="LISTINGS">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text"><%=listing.title%>
                                <span class="notax"><%=listing.price.toLocaleString("en-IN")%></span>
                                <span class="withtax nodis"><%=(listing.price*(1+0.18)).toLocaleString("en-IN")%></span>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>


    </body>

    <script>
        const taxbtn = document.querySelectorAll("#switchCheckDefault");
        const withtax = document.querySelectorAll(".withtax");
        const notax = document.querySelectorAll(".notax");
        for (btn of taxbtn){
            btn.addEventListener("click",()=>{
               for (tbtn of withtax){
                tbtn.classList.toggle("nodis");}
                for (tnobtn of notax){
                tnobtn.classList.toggle("nodis");}
            });

        }
    </script>