<% layout('/layouts/boilerplate') %>

    <body>
        <div class="d-flex justify-content-between align-items-center  ">
            <div class="filters overflow-auto px-3">
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-fire"></i></span>
                    <span class="text">Trending</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-sun"></i></span>
                    <span class="text">Beach</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-mountain-sun"></i></span>
                    <span class="text">Mountains</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-house"></i></span>
                    <span class="text">Countryside</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-building-columns"></i></span>
                    <span class="text">Metropoliten</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-gem"></i></span>
                    <span class="text">Underrated Gems</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-fire"></i></span>
                    <span class="text">Trending</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-sun"></i></span>
                    <span class="text">Beach</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-mountain-sun"></i></span>
                    <span class="text">Mountains</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-house"></i></span>
                    <span class="text">Countryside</span>
                </div>
                <div class="filter">
                    <span class="icon"><i class="fa-solid fa-building-columns"></i></span>
                    <span class="text">Metropoliten</span>
                </div>
            </div>
            <div class="tax-toggle ms-auto">
                <div class="form-check-reverse form-switch mx-3">
                    <button class = "toggle-btn" id="switchCheckDefault">
                        <i class="fa-solid fa-indian-rupee-sign"></i>
                    </button>
                    <label class="form-check-label" for="switchCheckDefault">Taxes</label>
                </div>
            </div>

        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <%for(listing of allListings){%>
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <div class="card card-listing col">
                        <img src="<%= listing.image.url %>" class="card-img-top " style="height: 20rem;" alt="LISTINGS">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <%=listing.title%>
                                    <span class="notax">&#8377;<%=listing.price.toLocaleString("en-IN")%> /night</span>
                                    <span
                                        class="withtax nodis">&#8377;<%=(listing.price*(1+0.18)).toLocaleString("en-IN")%>
                                            /night </span>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>


    </body>

    <script>
        const taxbtn = document.querySelectorAll("#switchCheckDefault");
        const withtax = document.querySelectorAll(".withtax");
        const notax = document.querySelectorAll(".notax");
        for (btn of taxbtn) {
            btn.addEventListener("click", () => {
                for (tbtn of withtax) {
                    tbtn.classList.toggle("nodis");
                }
                for (tnobtn of notax) {
                    tnobtn.classList.toggle("nodis");
                }
            });

        }
    </script>